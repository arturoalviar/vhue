@import 'utils/*'

:root {
  --color-heading: colors.light.heading;
  --color-text: colors.light.text;
	--color-bg: colors.light.bg;
  --color-card: colors.light.card;
  --color-toggle: colors.light.toggle;
	--color-primary: colors.primary;
	--color-success: colors.success;
	--color-danger: colors.danger;
  --color-black: colors.black;
  --color-gray: colors.gray;
  --color-darkGray: colors.darkGray;
  --colors-white: colors.white;
  --gradient-primary: gradients.primary;
}

[data-theme="dark"] {
  --color-heading: colors.dark.heading;
  --color-text: colors.dark.text;
  --color-bg: colors.dark.bg;
  --color-card: colors.dark.card;
  --color-toggle: colors.dark.toggle;
}

html
  box-sizing: border-box

*,
*:before,
*:after
  box-sizing: border-box

body
  background: var(--color-bg);
  color: var(--color-text);
  font-family: 'Montserrat', sans-serif
  position: relative
  margin: 0
  min-height: 100%

#app
  position: relative
  min-height: 100%

a
  color: inherit
  text-decoration: none

.app-wrapper.is-setup
  #wrapper
    padding: 3rem 30px
    margin: auto
    .vh-item-form-wrapper
      margin: auto
  .flash-message-wrapper
    left: 0
    width: 100%

#wrapper
  padding: 3rem 30px 2rem nav.offset
  max-width: 1280px
  margin-right: auto
  transition: transform ease-in-out
  &.has-flash-message
    transform: translateY(50px)
  +minMedia(lg)
    max-width: 1600px

@import 'typography.styl'
