@import './utils/mixins.styl'

h1, h2, h3, h4
  color: var(--color-heading)

h1, h2, h3, h4, p
  padding: 0
  margin: 0

h1
  font-size: remCalc(40)
  font-weight: 800
  line-height: 1
  margin-bottom: .5em
  +minMedia(lg)
    font-size: remCalc(64)

h2
  font-size: remCalc(34)
  font-weight: 600
  line-height: 1.2
  margin-bottom: .65em
  +minMedia(lg)
    font-size: remCalc(40)

h3
  font-size: remCalc(28)
  font-weight: 500
  line-height: 1.3
  margin-bottom: .75em
  +minMedia(lg)
    font-size: remCalc(34)

h4
  font-size: remCalc(24)
  font-weight: 400
  line-height: 1.4
  margin-bottom: .75em
  +minMedia(lg)
    font-size: remCalc(28)

p
  font-size: remCalc(16)
  font-weight: normal
  line-height: 1.6
  margin-bottom: remCalc(16)
  +minMedia(lg)
    font-size: remCalc(20)
    margin-bottom: remCalc(20)

ul
  list-style: none
  padding: 0
  margin: 0
