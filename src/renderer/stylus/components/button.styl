@import '../utils/*'

button,
.button
  border: 0
  outline: 0
  background: var(--color-primary)
  border: 1px solid transparent
  border-radius: 4px
  box-shadow: hsla(colors.primary, .5) 0px 10px 30px -8px
  color: colors.white
  cursor: pointer
  display: inline-flex
  justify-content: center
  align-items: center
  font-family: 'Montserrat', sans-serif
  font-size: remCalc(18)
  font-weight: 600
  height: button.height
  padding: 0 button.spacing
  text-align: center
  white-space: nowrap
  transition: all .3s ease
  -webkit-appearance: none
  &:hover,
  &:focus
    box-shadow: hsla(colors.primary, .5) 0px 10px 44px -2px
  &:disabled
    cursor: not-allowed
    opacity: .45
  &.is-danger
    background: var(--color-danger)
    box-shadow: hsla(colors.danger, .5) 0px 10px 30px -8px
    &:hover,
    &:focus
      box-shadow: hsla(colors.danger, .5) 0px 10px 44px -2px
  &.is-default
    background: var(--color-gray)
    box-shadow: 0px 10px 30px -8px rgba(0, 0, 0, .08)
    color: var(--color-black)
    &:hover,
    &:focus
      box-shadow: 0px 10px 44px -2px rgba(0, 0, 0, .12)
