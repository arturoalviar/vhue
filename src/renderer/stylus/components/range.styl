@import '../utils/*'

input[type="range"]
  background: transparent
  height: remCalc(20)
  padding: 0
  margin: 0
  max-width: 100%
  width: 100%
  -webkit-appearance: none
  &:focus
    border: 0
    outline: none
  &:disabled
    &::-webkit-slider-thumb
      background: var(--color-gray)
      cursor: not-allowed
    &::-webkit-slider-runnable-track
      cursor: not-allowed

input[type=range]::-webkit-slider-runnable-track
  background: var(--color-card)
  border-radius: .5rem
  cursor: pointer
  width: 100%
  height: remCalc(6)

input[type=range]::-webkit-slider-thumb
  background: var(--color-primary)
  border: 1px solid transparent
  border-radius: 50%
  cursor: pointer
  height: remCalc(20)
  width: remCalc(20)
  margin-top: remCalc(-8)
  transition: background .3s ease-in-out
  -webkit-appearance: none

+lightMode()
  input[type=range]
    &::-webkit-slider-runnable-track
      box-shadow: 0 2px 10px rgba(0, 0, 0, .04)
    &::-webkit-slider-thumb
      box-shadow: hsla(colors.primary, .4) 0px 4px 12px -2px
