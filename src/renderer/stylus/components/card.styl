@import '../utils/*'

.hue-light
  background: var(--color-card)
  border-radius: .75rem
  display: block
  min-height: remCalc(200)
  padding: card.spacing
  position: relative
  overflow: hidden
  label
    cursor: pointer
  .hue-light-label-name
    color: var(--color-text)
    font-size: remCalc(16)
    line-height: 1.1
    font-weight: normal
    +minMedia(lg)
      font-size: remCalc(22)
.hue-light-status-bar
  display: flex
  justify-content: space-between
  align-items: center
  position: absolute
  bottom: 0
  left: 0
  right: 0
  padding-left: card.spacing
  padding-right: @padding-left
  padding-bottom: remCalc(10)
  width: 100%
  height: 40px
  +minMedia(lg)
    height: 60px
.hue-light-online-status
  color: var(--color-danger)
  font-size: remCalc(10)
  font-weight: bold
  line-height: 1
  position: relative
  text-transform: lowercase
  +minMedia(lg)
    font-size: remCalc(16)
  svg
    fill: var(--color-text)
    position: absolute
    top: 50%
    left: 0
    width: 20px
    height: @width
    transform: translateY(-50%)
    +minMedia(lg)
      width: 24px
      height: @width
  span
    padding-left: remCalc(25)
    +minMedia(lg)
      padding-left: remCalc(36)
  &.is-online
    color: var(--color-success)

.hue-light-gradient
  box-shadow: shadows.lightGradient
  backface-visibility: hidden
  display: block
  position: absolute
  bottom: 0
  left: 0
  right: 0
  width: 100%
  height: 8px
  transform: scaleX(0)
  transform-origin: left
  transition: transform .3s ease-in

.hue-light
  &.is-unreachable
    opacity: .4
    .vh-light-toggle label
      cursor: not-allowed
  &.is-on
    .hue-light-gradient
      transform: scaleX(1)

+lightMode()
  .hue-light
    box-shadow: shadows.card
    &.is-unreachable
      box-shadow: shadows.cardInactive
